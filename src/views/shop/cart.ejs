  </head>
  <body>
    <%- include('../partials/header') %>

    <main class="container"><!-- Inicio del main-->
    <div>
      <h1 class="titulo_carrito">CARRITO DE COMPRAS</h1>
    </div>

    <section class="cart_container"> 
      <article class="cart_titulo_container">
        <p class="titulo_items">DETALLE DE PRODUCTO</p>
        <p class="titulo_items">CANTIDAD</p>
        <p class="titulo_items">TOTAL</p>
      </article>
    </section>

    <section class="cart_item_container"> 
      <div class="cart_item_descripcion">
          <Picture>
              <img src="../../img/star-wars/baby-yoda-11.png" alt="Figura Baby Yoda" />
          </Picture>
          <div> 
              <p class="cart_item_titulo">BABY YODA BLUEBALL</p>
              <p class="cart_item_text">STAR WARS</p>
              <p class="cart_item_precio">precio: $ 1799,99</p>
          </div>  
        </div>
          <div class="item_quantity">    
            <input class="input_quantity"  type="text" name="quantity" id="quantity" placeholder="2">
            <div class="item_sum">
              <picture class="button_quantity_container">
                <img class="button_quantity_mas" src="../../img/icons/+.svg" alt="icono_mas" />
              </picture>
              <picture class="button_quantity_container">
                <img class="button_quantity_menos" src="../../img/icons/-.svg" alt="icono_menos" />
              </picture>
            </div>
          </div>
        <div class="cart_item_total">
          <p>$ 3599,98</p>
        </div>
        <Picture>
          <img class="icon_close" src="../../img/icons/gg_close-o.png" alt="icono_close" />
        </Picture>
      
    </section>

    <section class="cart_item_container">     
        <div class="cart_item_descripcion">
          <picture>
            <img src="../../img/pokemon/pidgeotto-11.png" alt="Figura Pidgeotto" />
          </picture>
          <div>
            <p class="cart_item_titulo">PIDGEOTTO</p>
            <p class="cart_item_text">POKEMON</p>
            <p class="cart_item_precio">precio: $ 1799,99</p>
          </div>
        </div>  
        <div class="item_quantity">    
          <input class="input_quantity"  type="text" name="quantity" id="quantity" placeholder="1">
          <div class="item_sum">
            <picture class="button_quantity_container">
              <img class="button_quantity_mas" src="../../img/icons/+.svg" alt="icono_mas" />
            </picture>
            <picture class="button_quantity_container">
              <img class="button_quantity_menos" src="../../img/icons/-.svg" alt="icono_menos" />
            </picture>

          </div>
          
        </div>
        <div class="cart_item_total">
          <p>$ 1799,99</p>
        </div>
        <Picture>
          <img class="icon_close" src="../../img/icons/gg_close-o.png" alt="icono_close" />
        </Picture>
      
    </section>
      <div>
        <h2 class="title_resumen">RESUMEN</h2>
      </div>
      <section class="resumen_container">   
        <div class="resumen_items">
          <p class="resumen_items_text1">CANTIDAD DE ELEMENTOS</p>
          <p class="resumen_items_text2">3</p>
        </div>
        <div class="resumen_items">
          <p class="resumen_items_text1">SUBTOTAL</p>
          <p class="resumen_items_text2">$ 5.399,97</p>
        </div>
        <div class="resumen_items">
          <p class="resumen_items_text1">ENVIO</p>
          <p class="resumen_items_text2">$ 0,00</p>
        </div>
        <div class="resumen_items_total">
          <p class="resumen_items_text_total">TOTAL</p>
          <p class="resumen_items_text_total2">$ 5.399,97</p>
        </div>
    </section>
      <article class="item_pagar">
        <p class="item_pagar__text">IR A PAGAR</p>
      </article>
    
  </main>
  <%- include('../partials/footer') %>

